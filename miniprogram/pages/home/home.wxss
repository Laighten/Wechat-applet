/* miniprogram/pages/home/home.wxss */

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  
}

.container-content {
  display: flex;
  flex-direction: column;
  width: 95%;
  padding: 16px 16px;
  margin: 0 auto;
  
}
.container-line{
  width: 100%;
  height: 1px;
  
}

.user-info {
  display: flex;
  flex-direction: row;
  width: 100%;
  align-items: center;
}

.user-head {
  width: 36px;
  height: 36px;
  line-height: 36px;
  border-radius: 50%;
  background-color: #ccc;
}

.user-name-time {
  display: flex;
  flex-direction: column;
  width: 80%;
  margin-top: 5px;
  margin-left: 10px;
}

.user-name {
  font-size: 18px;
  color: #333;
  font-weight: bold;
}

.user-publish-time {
  width: 100%;
  font-size: 13px;
  color: #999;
}

.content {
  display: flex;
  flex-direction: column;
  margin-right: 5%;
  margin-top: 14px;
}

.content-scroll {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.content-text {
  font-size: 16px;
  color: #666;
  margin-left: 10px;
  font-family:'Microsoft YaHei';
}

.content-img {
  width: 100px;
  height: 100px;
  margin-left: 10px;
  margin-top: 10px;
  background-color: #999;
}


