
.content {
  height: 100%;
  width: 100%;
}


.text-content {
  padding: 0 25rpx;
}
.text-area{
  margin-top: 130px;
  border: 1px solid #ccc;
  padding: 10px 20px;
  background-color: white;
  box-sizing: border-box;
  box-shadow: 2px 2px blur #ccc;
  border-radius: 5px;
  width: 100%;

}
textarea {
  width: 650rpx;
  padding: 25rpx 0;
}
